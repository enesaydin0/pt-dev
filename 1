using System;

namespace OrnekProgram
{
    class Program
    {
        static void Main(string[] args)
        {
            string s, ys = "";
            int a;
            byte c;
            
            Console.Write("Bir cümle giriniz:");
            s = Console.ReadLine();

            for (a = 0; a < s.Length; a++)
            {
                c = (byte)s[a];

                // ASCII kodunu kontrol ederek büyük harfi küçüğe çevirme
                if (c >= 65 && c <= 90) // Büyük harf ise
                {
                    ys = ys + (char)(c + 32);
                }
                else
                {
                    ys = ys + s[a];
                }
            }

            Console.WriteLine("Küçük harfe dönüştürülmüş hali: " + ys);
            Console.WriteLine("\n\nPress any key to continue . . . ");
            Console.ReadKey(true);
        }
    }
}
